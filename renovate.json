{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "extends": ["config:best-practices"],
  "automerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "all package updates"
    },
    {
      "matchPackageNames": [
        "@types/mocha",
        "@types/power-assert",
        "espower-typescript",
        "mocha",
        "power-assert"
      ],
      "groupName": "test libraries"
    },
    {
      "matchPackageNames": [
        "prettier"
      ],
      "groupName": "prettier"
    },
    {
      "matchDatasources": ["github-actions"],
      "groupName": "github actions"
    },
    {
      "matchPackageNames": [
        "@slack/bolt",
        "@types/node",
        "@types/node-cache",
        "@types/request",
        "@types/ws",
        "discord.js",
        "moment",
        "node-cache",
        "request",
        "typescript"
      ],
      "groupName": "all other npm packages"
    }
  ]
}