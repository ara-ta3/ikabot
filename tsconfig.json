{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "lib/*": [
                "src/lib/*"
            ],
            "services/*": [
                "src/services/*"
            ],
        },
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "lib": [ "es2015" ]
    },
    "include": [
        "src/scripts/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
