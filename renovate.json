{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "extends": ["config:best-practices"],
  "automerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "all non-major package updates"
    },
    {
      "matchPackageNames": [
        "@typescript-eslint/*",
        "eslint*",
        "jest",
        "ts-jest",
        "@types/jest",
        "ts-node",
        "@types/node"
      ],
      "groupName": "test libraries"
    },
    {
      "matchPackageNames": [
        "prettier"
      ],
      "groupName": "prettier"
    },
    {
      "matchDatasources": ["github-actions"],
      "groupName": "github actions"
    }
  ]
}